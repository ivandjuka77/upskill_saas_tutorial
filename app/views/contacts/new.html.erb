<div class="containter">
    <h3 class="text-center">Contact us</h3>
    
    <%= form_for "/contacts"  do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :comment %>
        <%= f.text_area :comment %>
        
        <%= f.submit "Submit" %>
    <% end %>
</div>